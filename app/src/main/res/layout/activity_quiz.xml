<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.RegistrationActivity"
        android:clickable="true">

        <LinearLayout
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/main_layout"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            >

            <TextView
                android:id="@+id/studentname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sharma"
                android:textSize="21dp"
                android:gravity="center"
                android:padding="12dp"
                android:background="@drawable/rounded"
                android:textColor="@android:color/white"
                />

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/rounded">
            <TextView
                android:id="@+id/subjectname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Operating System"
                android:textSize="16dp"
                android:layout_gravity="center"
                android:padding="5dp"
                android:textColor="@android:color/white"
                />

            <TextView
                android:id="@+id/rrqid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RRQID: 1"
                android:textSize="16dp"
                android:layout_gravity="center"
                android:padding="5dp"
                android:textColor="@android:color/white"
                />

                <TextView
                    android:id="@+id/totalquestion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RRQID: 1"
                    android:textSize="16dp"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    android:textColor="@android:color/white"
                    />
            </LinearLayout>
            <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/question"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Question: Q1/Q4 "
                android:textSize="21dp"
                android:padding="12dp"
                android:background="@drawable/rounded"
                android:textColor="@android:color/white"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="12dp"
            android:layout_below="@+id/main_layout"
            android:layout_above="@+id/submitbtn"
            android:layout_marginBottom="12dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:weightSum="1">

            <LinearLayout
                android:layout_weight=".5"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:id="@+id/a_option"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="A"
                    android:textSize="74dp"
                    android:gravity="center"
                    android:layout_weight=".5"
                    android:layout_margin="5dp"
                    android:textColor="@drawable/text_selector"
                    android:background="@drawable/selection"/>

                <TextView
                    android:id="@+id/b_option"
                    android:layout_width="0dp"
                    android:text="B"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="74dp"
                    android:layout_weight=".5"
                    android:layout_margin="5dp"
                    android:textColor="@drawable/text_selector"
                    android:background="@drawable/selection"/>

            </LinearLayout>


            <LinearLayout
                android:layout_weight=".5"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:id="@+id/c_option"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".5"
                    android:textSize="74dp"
                    android:text="C"
                    android:gravity="center"
                    android:layout_margin="5dp"
                    android:textColor="@drawable/text_selector"
                    android:background="@drawable/selection"
                   />

                <TextView
                    android:id="@+id/d_option"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="D"
                    android:layout_weight=".5"
                    android:textSize="74dp"
                    android:gravity="center"
                    android:layout_margin="5dp"
                    android:textColor="@drawable/text_selector"
                    android:background="@drawable/selection"/>

            </LinearLayout>


        </LinearLayout>


        <Button
            android:id="@+id/submitbtn"
            android:layout_gravity="center"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded"
            android:padding="10dp"
            android:foreground="?attr/selectableItemBackground"
            android:textColor="@android:color/white"
            android:layout_centerInParent="true"
            android:text="Submit"
            android:layout_marginBottom="12dp"
            android:layout_above="@+id/nextbtn"/>



        <Button
            android:id="@+id/nextbtn"
            android:layout_gravity="center"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded"
            android:padding="10dp"
            android:foreground="?attr/selectableItemBackground"
            android:textColor="@android:color/white"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_marginBottom="12dp"
            android:text="Next"/>

    </RelativeLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:clickable="true"
        android:id="@+id/progressbar"
        android:visibility="gone"
        >
        <ProgressBar
            android:layout_width="50dp"
            android:layout_height="50dp" />
    </LinearLayout>
</FrameLayout>